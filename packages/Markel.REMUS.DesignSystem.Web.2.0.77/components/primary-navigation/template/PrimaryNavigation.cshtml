@using Markel.REMUS.Infrastructure.Nancy.Extensions

@foreach (var navItem in Model.Links)
{
    <li class='@navItem.Value.Selected @navItem.Value.Name.Replace("&","").Replace(" ", "_")'>
        @if (navItem.Value.Method == "GET")
        {
            <a href='@navItem.Value.Url'>
                <span>@navItem.Value.Name</span>
                <!--<i class="icon-@navItem.Value.IconName"></i>-->
            </a>
        }
        @if (navItem.Value.Method == "POST")
        {
            <form action="@navItem.Value.Url" method="POST">
                @if (navItem.Key == "NewQuote")
                {
                    <button class="bi-new-quote">@navItem.Value.Name</button>
                }
                else
                {
                    <button>@navItem.Value.Name</button>
                }
            </form>
        }
    </li>
}
